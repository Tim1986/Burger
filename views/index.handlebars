<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <h1>Mmmmm, burgers!</h1>
        </div>
        <div class="col"></div>
    </div>
    <br>
    <div class="row">
        <div class="col-4">
            <h2>Burgers to eat</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgers-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-4">
            <h2>Add a Burger</h2>
            <form>

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>

                <button type="submit" class="create-form">Add Burger</button>
            </form>
        </div>
        <div class="col-4">
            <h2>Burgers already eaten</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgers-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>